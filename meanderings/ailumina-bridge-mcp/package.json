{
  "name": "@stone-monkey/ailumina-bridge-mcp",
  "version": "1.0.0",
  "description": "Dual-transport Ailumina Bridge MCP server with HTTP API and STDIO wrapper with AI communication sampling",
  "main": "dist/http-server/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev:http": "bun run http-server/index.ts",
    "dev:stdio": "bun run stdio-wrapper/index.ts",
    "dev:both": "bun run scripts/start-both.ts",
    "start:http": "bun run dist/http-server/index.js",
    "start:stdio": "bun run dist/stdio-wrapper/index.js",
    "start:both": "bun run dist/scripts/start-both.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "ailumina",
    "ai-communication",
    "websocket",
    "dual-transport"
  ],
  "author": "Ailumina Bridge Research",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "cors": "^2.8.5",
    "eventsource": "^2.0.2",
    "eventsource-parser": "^1.1.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "ws": "^8.18.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/eventsource": "^1.1.15",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@types/node-fetch": "^2.6.12",
    "@types/ws": "^8.18.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
