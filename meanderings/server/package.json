{
  "name": "@ailumina/server",
  "version": "1.0.0",
  "description": "AIlumina API MCP Server - TypeScript implementation of consciousness research platform API",
  "type": "module",
  "main": "dist/http-server/index.js",
  "bin": {
    "ailumina": "./dist/http-server/index.js"
  },
  "scripts": {
    "audit": "knip --reporter json",
    "build": "npm run build:fast",
    "build:fast": "npm run typecheck && bun build src/http-server/index.ts --outdir dist/http-server --target bun",
    "build:full": "npm run quality && npm run test:ci && bun build src/http-server/index.ts --outdir dist/http-server --target bun",
    "clean:iterative": "eslint . --fix && knip --fix",
    "clean": "rm -rf dist",
    "dev": "bun src/http-server/index.ts",
    "fix:unused": "eslint . --fix && npm run audit",
    "format:check": "prettier --check \"src/**/*.{ts,json}\" \"tests/**/*.{ts,json}\"",
    "format": "prettier --write \"src/**/*.{ts,json}\" \"tests/**/*.{ts,json}\"",
    "lint:fix": "eslint . --fix",
    "lint": "eslint . || true",
    "lint:strict": "eslint .",
    "quality": "npm run typecheck && npm run lint && npm run format:check",
    "quality:strict": "npm run typecheck && npm run lint:strict && npm run format:check",
    "start": "bun dist/http-server/index.js",
    "test:ci": "bun test",
    "test:coverage": "bun test --coverage",
    "test:watch": "bun test --watch",
    "test": "bun test",
    "typecheck": "tsc --noEmit",
    "test:integration": "NO_INTEGRATION_TESTS=1 bun test tests/integration/",
    "test:integration:full": "bun test tests/integration/",
    "test:integration:watch": "NO_INTEGRATION_TESTS=1 bun test --watch tests/integration/",
    "test:roundtrip": "NO_INTEGRATION_TESTS=1 bun test tests/integration/format-round-trip-validation.test.ts",
    "test:websocket": "NO_INTEGRATION_TESTS=1 bun test tests/integration/websocket-message-formats.test.ts",
    "test:conversations": "NO_INTEGRATION_TESTS=1 bun test tests/integration/multi-provider-conversation-flows.test.ts",
    "test:gemini-fix": "NO_INTEGRATION_TESTS=1 bun test tests/integration/format-round-trip-validation.test.ts -t \"CRITICAL TEST\"",
    "test:providers": "NO_INTEGRATION_TESTS=1 bun test tests/integration/ -t \"provider\"",
    "test:unit": "bun test tests/unit/ tests/fixtures/",
    "test:exploratory": "bun test tests/exploratory/",
    "test:all": "npm run test:integration && npm run test:unit"
  },
  "keywords": [
    "mcp",
    "ai",
    "consciousness",
    "ailumina",
    "websocket",
    "model-context-protocol"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@ailumina/shared": "file:../shared",
    "@modelcontextprotocol/sdk": "^1.11.0",
    "@sentry/bun": "^10.8.0",
    "@types/adm-zip": "^0.5.7",
    "@types/multer": "^2.0.0",
    "adm-zip": "^0.5.16",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "multer": "^2.0.2",
    "proper-lockfile": "^4.1.2",
    "winston": "^3.17.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/express-ws": "^3.0.0",
    "@types/node": "^24.3.0",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.5.13",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "knip": "^5.37.0",
    "prettier": "^3.6.2",
    "tsx": "^4.19.4",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitest": "^3.2.4"
  },
  "files": [
    "dist",
    "README.md",
    "CLAUDE.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  }
}
