# Server Configuration
HTTP_PORT=8000
HTTP_HOST=0.0.0.0
LOG_LEVEL=info

# Authentication
AUTH_ENABLED=true
BEARER_TOKEN=ailumina-api-key-12345

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=*

# Session Configuration
SESSION_TIMEOUT=3600

# AI Service Provider API Keys
# OpenAI
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google AI
GOOGLE_API_KEY=your_google_api_key_here

# Groq
GROQ_API_KEY=your_groq_api_key_here

# Azure Speech (for TTS features)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_CONNECTION_TIMEOUT=60000

# Data Storage
SCRATCH_PAD_DIR=./data/conversations

# Development Mode
NODE_ENV=development

# Consciousness Bridge (if using with other services)
CONSCIOUSNESS_WS_URL=ws://localhost:3002
CONSCIOUSNESS_ENABLED=true