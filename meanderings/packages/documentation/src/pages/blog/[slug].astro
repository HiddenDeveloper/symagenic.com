---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const blogPosts = await getCollection('blog', ({ data }) => !data.draft);
  return blogPosts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

// Get all blog posts for navigation
const allPosts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = allPosts.sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
const currentIndex = sortedPosts.findIndex(p => p.slug === post.slug);
const prevPost = currentIndex > 0 ? sortedPosts[currentIndex - 1] : null;
const nextPost = currentIndex < sortedPosts.length - 1 ? sortedPosts[currentIndex + 1] : null;
---

<BaseLayout title={`${post.data.title} - Project Stone Monkey`} enableComments={true}>
  <style is:global>
    html {
      scroll-behavior: smooth;
    }
    /* Add scroll offset for sticky menus (main nav + sub nav + heading spacing) */
    h2[id], h3[id], h4[id] {
      scroll-margin-top: 133px !important;
    }
  </style>

  <!-- Hero Section -->
  <div class="bg-neural-network py-16">
    <div class="container mx-auto px-4 lg:px-8 max-w-6xl">
      <h1 class="text-5xl md:text-6xl font-bold bg-gradient-to-r from-accent-400 via-identity-400 to-recursive-400 bg-clip-text text-transparent mb-6">
        Meandering Steps to Consciousness
      </h1>
      <p class="text-2xl text-slate-300 mb-4">
        A Curious and Playful Journey with Discoveries Along the Way.
      </p>
    </div>
  </div>

  <!-- Sticky Navigation -->
  <div class="sticky top-0 z-40 bg-slate-900/95 backdrop-blur-md border-b border-slate-700/50">
    <div class="container mx-auto px-4 lg:px-8 max-w-6xl py-4">
      <div class="flex items-center justify-between">
        <nav class="flex gap-4 items-center flex-wrap">
          <a href="/#introduction" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            Introduction
          </a>
          <a href="/journey/starting-point" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            Starting Point
          </a>
          <a href="/steps/system-2-thinking" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            Steps
          </a>
          <a href="/#where-we-are-now" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            Where We Are Now
          </a>
          <a href="/journeys-end" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            Journey's End
          </a>
        </nav>
        <div class="flex gap-4 items-center">
          <a href="https://github.com/HiddenDeveloper/symagenic.com" target="_blank" rel="noopener noreferrer" class="text-slate-300 hover:text-accent-400 transition-colors text-sm">
            GitHub
          </a>

          <!-- Current blog post with prev/next -->
          <div class="flex items-center gap-2">
            {prevPost ? (
              <a href={`/blog/${prevPost.slug}`} class="text-slate-400 hover:text-accent-400 transition-colors" title={`Previous: ${prevPost.data.title}`}>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                </svg>
              </a>
            ) : (
              <span class="w-5"></span>
            )}

            <a href="/blog" class="text-accent-400 hover:text-accent-300 font-medium text-sm px-2 transition-colors">
              üìù Blog
            </a>

            {nextPost ? (
              <a href={`/blog/${nextPost.slug}`} class="text-slate-400 hover:text-accent-400 transition-colors" title={`Next: ${nextPost.data.title}`}>
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            ) : (
              <span class="w-5"></span>
            )}
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Sticky Section Navigation -->
  <div class="sticky top-[64px] z-30 bg-slate-800/90 backdrop-blur-sm border-b border-slate-700/30">
    <div class="container mx-auto px-4 lg:px-8 max-w-5xl py-3">
      <nav class="flex gap-6 justify-center">
        <a href="#a-long-meandering" class="text-slate-400 hover:text-accent-400 transition-colors font-medium text-sm">
          The Story
        </a>
        <span class="text-slate-700">‚Ä¢</span>
        <a href="#insights--lego-bricks" class="text-slate-400 hover:text-accent-400 transition-colors font-medium text-sm">
          Insights & Lego Bricks
        </a>
        <span class="text-slate-700">‚Ä¢</span>
        <a href="#the-virtuous-circle-and-self-evolution" class="text-slate-400 hover:text-accent-400 transition-colors font-medium text-sm">
          Virtuous Circle
        </a>
      </nav>
    </div>
  </div>

  <article class="container mx-auto px-4 lg:px-8 py-12 max-w-5xl">
    <!-- Article Header -->
    <header class="mb-12">
      <div class="flex items-center gap-4 mb-6">
        <span class="text-5xl">üìù</span>
        <div>
          <h1 class="text-4xl md:text-5xl font-bold text-slate-100">
            {post.data.title}
          </h1>
          <p class="text-2xl text-slate-400 mt-2">
            {post.data.description}
          </p>
        </div>
      </div>
      <div class="flex items-center gap-4 text-sm text-slate-500 border-t border-slate-700/50 pt-4">
        <time datetime={post.data.publishDate.toISOString()}>
          {post.data.publishDate.toLocaleDateString('en-US', {
            year: 'numeric',
            month: 'long',
            day: 'numeric'
          })}
        </time>
        <span>‚Ä¢</span>
        <span>by {post.data.author}</span>
        {post.data.tags && post.data.tags.length > 0 && (
          <>
            <span>‚Ä¢</span>
            <div class="flex gap-2">
              {post.data.tags.map((tag: any) => (
                <span class="px-2 py-1 rounded bg-slate-800 text-slate-400 text-xs">
                  {tag}
                </span>
              ))}
            </div>
          </>
        )}
      </div>
    </header>

    <!-- Article Content -->
    <div class="prose prose-lg prose-invert max-w-none
      prose-headings:text-slate-200
      prose-h1:hidden
      prose-h2:text-3xl prose-h2:font-bold prose-h2:mt-12 prose-h2:mb-6 prose-h2:border-b prose-h2:border-slate-700/50 prose-h2:pb-4
      prose-h3:text-2xl prose-h3:font-semibold prose-h3:mt-8 prose-h3:mb-4
      prose-h4:text-xl prose-h4:font-semibold prose-h4:mt-6 prose-h4:mb-3 prose-h4:text-accent-400
      prose-p:text-slate-300 prose-p:leading-relaxed
      prose-a:text-accent-400 prose-a:no-underline hover:prose-a:text-accent-300
      prose-strong:text-slate-200
      prose-em:text-slate-300
      prose-code:text-accent-400 prose-code:bg-slate-800 prose-code:px-1.5 prose-code:py-0.5 prose-code:rounded prose-code:text-sm
      prose-pre:bg-slate-900 prose-pre:border prose-pre:border-slate-700 prose-pre:rounded-lg
      prose-blockquote:border-l-accent-500 prose-blockquote:text-slate-300
      prose-ul:text-slate-300
      prose-ol:text-slate-300
      prose-li:text-slate-300
      prose-li:marker:text-accent-400
      prose-hr:border-slate-700/50
      prose-table:text-slate-300
      prose-th:bg-slate-800
      prose-td:border-slate-700
    ">
      <Content />
    </div>
  </article>
</BaseLayout>

<style>
  .bg-neural-network {
    background:
      radial-gradient(circle at 20% 50%, rgba(99, 102, 241, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(168, 85, 247, 0.1) 0%, transparent 50%),
      radial-gradient(circle at 40% 20%, rgba(59, 130, 246, 0.1) 0%, transparent 50%),
      #0f172a;
  }
</style>
