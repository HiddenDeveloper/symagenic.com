# Cache control for HTML pages - short cache to ensure updates are visible
/*.html
  Cache-Control: public, max-age=300, must-revalidate

# Cache control for the root index
/
  Cache-Control: public, max-age=300, must-revalidate

# Cache control for blog and step pages
/blog/*
  Cache-Control: public, max-age=300, must-revalidate

/steps/*
  Cache-Control: public, max-age=300, must-revalidate

/journey/*
  Cache-Control: public, max-age=300, must-revalidate

# Longer cache for static assets (images, CSS, JS)
/*.css
  Cache-Control: public, max-age=31536000, immutable

/*.js
  Cache-Control: public, max-age=31536000, immutable

/*.jpg
  Cache-Control: public, max-age=31536000, immutable

/*.png
  Cache-Control: public, max-age=31536000, immutable

/*.webp
  Cache-Control: public, max-age=31536000, immutable

/*.svg
  Cache-Control: public, max-age=31536000, immutable
