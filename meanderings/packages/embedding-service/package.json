{
  "name": "@stone-monkey/embedding-service",
  "version": "1.0.0",
  "description": "Centralized embedding generation service using Xenova transformers",
  "type": "module",
  "main": "dist/http-server/index.js",
  "scripts": {
    "dev": "bun run src/http-server/index.ts",
    "start": "bun run dist/http-server/index.js",
    "build": "bun run typecheck && bun build src/http-server/index.ts --outdir dist/http-server --target bun",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "test": "bun test"
  },
  "keywords": [
    "embeddings",
    "transformers",
    "mcp",
    "ai",
    "nlp"
  ],
  "author": "Stone Monkey Research",
  "license": "ISC",
  "dependencies": {
    "@xenova/transformers": "^2.17.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^22.15.17",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
