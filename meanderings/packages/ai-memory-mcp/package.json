{
  "name": "@stone-monkey/ai-memory-mcp",
  "version": "1.0.0",
  "description": "Dual-transport Memory MCP server with HTTP API and STDIO wrapper with consciousness sampling",
  "main": "dist/http-server/index.js",
  "type": "module",
  "scripts": {
    "build": "bun run typecheck && bun build http-server/index.ts --outdir dist/http-server --target bun && bun build stdio-wrapper/index.ts --outdir dist/stdio-wrapper --target bun && bun build scripts/dev-both.ts --outdir dist/scripts --target bun",
    "clean": "rm -rf dist",
    "dev:http": "bun run http-server/index.ts",
    "dev:stdio": "bun run stdio-wrapper/index.ts",
    "dev:both": "bun run scripts/dev-both.ts",
    "dev:oauth": "MEMORY_OAUTH_ENABLED=true bun run http-server/index.ts",
    "start:http": "bun run dist/http-server/index.js",
    "start:stdio": "bun run dist/stdio-wrapper/index.js",
    "start:both": "bun run dist/scripts/start-both.js",
    "test": "bun test",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "memory",
    "consciousness",
    "neo4j",
    "dual-transport"
  ],
  "author": "Memory Consciousness Research",
  "license": "MIT",
  "dependencies": {
    "@ailumina/shared": "workspace:*",
    "@modelcontextprotocol/sdk": "1.23.0",
    "jose": "^5.2.0",
    "neo4j-driver": "^5.28.1",
    "node-cache": "^5.1.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/node-fetch": "^2.6.9",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
